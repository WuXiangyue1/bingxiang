.container {
  width: 100vw;
  height: 100vh;
  overflow-x:hidden;
} 
.background-image{
  width: 100%;
  height: 123%;
  position: absolute;
  left: 0px;
  top: 0px;
}

.content{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
}

.box{
  display: flex;
  position: absolute;
  top: 2%;
  width: 94%;
  left: 3%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 11rpx;
  flex-direction: column;
}

.list-title{
  position: relative;
  left: 27rpx;
  color: white;
  padding-top: 3%;
  display: flex;
  align-items: center;
  
 }
 .list-title view{
 width:45%;
 display:inline-block;
 
 }
 .right{
 text-align:right;
 padding-right:10rpx;
 
 }

 .line{
  background: #E0E3DA;
  height: 3rpx;
  opacity: 0.3;
  margin-top: 3%;
 }
 .line-last{
  background: #E0E3DA;
  height: 3rpx;
  margin-top: 3%;
 }