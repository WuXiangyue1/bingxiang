.container {
  width: 100vw;
  height: 100vh;
  overflow-x:hidden;
} 
.background-image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
}
.content{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 10px;
  top: 10px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  
}
.box1{
  display: flex;
  position: absolute;
  top: 10rpx;
  width: 94%;
  left: 3%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 11rpx;
  flex-direction: column;
}
.box2{
  display: flex;
  position: absolute;
  top: 55%;
  width: 94%;
  left: 3%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 11rpx;
  flex-direction: column;
}

